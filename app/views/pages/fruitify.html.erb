<div class="row">
<div class="hero well span5 offset4">
	<h3>Welcome to Fruitr</h3>

		<%= form_tag fruitify_path, :class=> "search", :method=>:get do  %>
		  <%= text_field_tag :name, params[:name]  %>
			<%= submit_tag "Search", :class=>"btn btn-primary"%>

	  	<%end%>

</div>	

<ul class="artists well span5 offset4">
	
	<% unless @result.nil? %>
	 	
		<% @result["similarartists"]["artist"].each do |res|%>
			<li>
			<%= image_tag res["image"][4]["#text"] %><br/>
			<%= res["name"]%><br/>
			</li>
		<%end%>

  	<%end%>
</ul>

	<% unless @lovedtracks.nil? %>
		<% @lovedtracks["lovedtracks"]["track"].each do |track|%>
			<%= track["name"] %> - 
			<%= track["artist"]["name"]%><br/>
		<%end%>
  	<%end%>
 

</div>	