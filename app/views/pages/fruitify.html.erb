<div class="hero well span7 offset4">
	<h3>Welcome to Fruitr</h3>

		<%= form_tag fruitify_path, :class=> "search", :method=>:get do  %>
		<%=label :name, "Artist"%>  
		<%= text_field_tag :name, params[:name]  %>
			

		<%= submit_tag "Search", :class=>"btn btn-primary", :name=>nil %>

	  	<%end%>

</div>	

<div id="echochart" class="span7 offset4"></div>

<ul class="artists well span7 offset4">
	<% unless @similar.nil? %>
	 
	 <% @similar["response"]["artists"].each do |artist|%>
		<%= artist["name"] %><br/>
	 <%end%>
	 
	
  	<%end%>
	

</ul>

	

</div>	