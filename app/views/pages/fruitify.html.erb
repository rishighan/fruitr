Welcome to Fruitr.

	<%= form_tag fruitify_path, :method=>:get do  %>
	  <%= text_field_tag :username, params[:username]  %>

  	<%end%>

	<% unless @result.nil? %>
		<% @result["similarartists"]["artist"].each do |res|%>
			<%= image_tag res["image"][2]["#text"] %><br/>
			<%= res["name"]%><br/>
		<%end%>
  	<%end%>

	<% unless @lovedtracks.nil? %>
		<% @lovedtracks["lovedtracks"]["track"].each do |track|%>
			<%= track["name"] %><br/>
			<%= track["artist"]["name"]%><br/>
		<%end%>
  	<%end%>
	